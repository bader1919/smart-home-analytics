# Environment Variables for BY MB Consultancy Smart Home Analytics
# Copy this file to .env and update with your actual credentials

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Home Assistant Configuration
HOME_ASSISTANT_URL=http://192.168.11.198:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_token_here

# Graphiti Configuration
GRAPHITI_GROUP_ID=bymb-consultancy
NEO4J_USER=neo4j
NEO4J_PASSWORD=bader123

# Network Configuration
NETWORK_NAME=vlan-static-eth0.11-cce8d8

# Service IPs (adjust if needed)
NEO4J_IP=192.168.11.23
GRAPHITI_IP=192.168.11.29
REDIS_IP=192.168.11.30
COLLECTOR_IP=192.168.11.31
DASHBOARD_IP=192.168.11.32

# Collection Settings
COLLECTION_INTERVAL=900  # 15 minutes in seconds
MAX_RETRIES=3
BATCH_SIZE=100

# Analytics Settings
ENERGY_THRESHOLD=85      # Energy efficiency target %
SECURITY_THRESHOLD=90    # Security score target %
HEALTH_THRESHOLD=95      # System health target %

# Client Branding
COMPANY_NAME=BY MB Consultancy
LOGO_URL=/assets/logo.png
THEME_COLOR=#2563eb

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Notification Settings
ALERT_EMAIL=your_email@domain.com
SLACK_WEBHOOK=your_slack_webhook_url_here

# Development/Debug
DEBUG_MODE=false
LOG_LEVEL=INFO